@model Car_Agency.Models.User

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="~/Content/css/all.min.css" rel="stylesheet">
    <link href="~/Content/css/normalize.css" rel="stylesheet">

    <link href="~/Content/css/Proj6.css" rel="stylesheet">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,300;0,400;1,700&family=Open+Sans:wght@300;400;700&display=swap"
          rel="stylesheet">
    <title>Update User Page</title>

</head>

<body>
    <div class="header-user">
        <div class="container">
            <img src="~/Content/photos/logo.png" alt="logo">
            <div class="links">
                <span class="icon">
                    <span></span>
                    <span></span>
                    <span></span>
                </span>
                <ul>
                    <li>@Html.ActionLink("Home", "Main", "Home")</li>
                    <li>@Html.ActionLink("Users", "Operation", "Home")</li>
                    <li>@Html.ActionLink("Operation", "Operation", "Home")</li>
                    <li>@Html.ActionLink("Logout", "Logout", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="add">
        <div class="container">
            <h2 class="special-heading-add">Update User Page</h2>
            <div class="content">
                <form action="update_info" method="post">
                    @Html.HiddenFor(n => n.User_ID)
                    @Html.TextBoxFor(n => n.User_Name, new { placeholder = "User Name", @class = "main-input" })
                    @Html.ValidationMessageFor(n => n.User_Name, "", new { @class = "text-danger", @style = "color : white" })
                    <select name="User_Type" id="User_Type" aria-placeholder="User_Type" class="main-input" required>
                        <option>
                            Supervisor
                        </option>
                        <option>
                            Employee
                        </option>
                    </select>
                    <input type="submit" id="submit" value="Update User" class="submit" />
                </form>
            </div>
        </div>
    </div>
    <div class="footer">
        <div class="container">
            <p class="copyright"> &copy; 2022 - All Rights Reserved - Muhammad Gomaa</p>
            <div class="social-icons">
                <i class="fa-brands fa-facebook"></i>
                <i class="fa-brands fa-twitter"></i>
                <i class="fa-brands fa-instagram"></i>
                <i class="fa-brands fa-linkedin"></i>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
            integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js"
            integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js"
            integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
            crossorigin="anonymous"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="~/Content/javascript/Proj6.js"></script>
    <script>
        $("#submit").click(function () {
            var name = $("#User_Name").val();
            var pass = $("#User_Password").val();
            var type = $("#User_Type").val();

            if (name == "" || pass == "" || type == "") {
                swal({
                    title: "Fields Empty",
                    text: "Please Complete The Required Information",
                    icon: "warning",
                    button: "OK",
                });
            }
            else if (pass.length < 6) {
                swal({
                    title: "Invalid Password",
                    text: "Password must be contain letters , numbers and 6 Digits",
                    icon: "warning",
                    button: "OK",
                });
            }
            else {
                swal({
                    title: "Are you sure?",
                    text: "Update User Information",
                    icon: "warning",
                    buttons: true,
                })
                    .then((willDelete) => {
                        if (willDelete) {
                            swal("", {
                                icon: "success",
                                text: "Successfully Updated",
                            });
                        }
                        else {
                            swal("Cancelled Operation");
                        }
                    });
            }

        })
    </script>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</body>

</html>