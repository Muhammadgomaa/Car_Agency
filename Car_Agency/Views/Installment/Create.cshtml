
@{
    Car_Agency.Models.Customer customer = ViewBag.customer;
    Car_Agency.Models.Car car = ViewBag.car;
    Car_Agency.Models.User user = ViewBag.user;
    string date = ViewBag.date;
    string time = ViewBag.time;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="~/Content/css/all.min.css" rel="stylesheet">
    <link href="~/Content/css/normalize.css" rel="stylesheet">

    <link href="~/Content/css/Proj6.css" rel="stylesheet">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,300;0,400;1,700&family=Open+Sans:wght@300;400;700&display=swap"
          rel="stylesheet">
    <title>Add Sales Installment Page</title>

</head>

<body>
    <div class="header-sales">
        <div class="container">
            <img src="~/Content/photos/logo.png" alt="logo">
            <div class="links">
                <span class="icon">
                    <span></span>
                    <span></span>
                    <span></span>
                </span>
                <ul>
                    <li>@Html.ActionLink("Home", "Main", "Home")</li>
                    <li>@Html.ActionLink("Sales", "Operation", "Home")</li>
                    <li>@Html.ActionLink("Operation", "Operation", "Home")</li>
                    <li>@Html.ActionLink("Logout", "Logout", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="special-add">
        <div class="container">
            <h2 class="special-heading-add">Add Sales Installment Page</h2>
            <div class="content">
                <form action="~/installment/add">

                    <input type="hidden" name="Cus_ID" class="main-input" value="@customer.Cus_ID" readonly />
                    <input type="hidden" name="User_ID" class="main-input" value="@user.User_ID" readonly />
                    <input type="hidden" name="Car_ID" class="main-input" value="@car.Car_ID" readonly />

                    <label style="font-size: 20px ; padding: 10px;color: white;">Customer National ID</label><br />
                    <input type="text" name="National_ID" class="main-input" value="@customer.National_ID" readonly />
                    <label style="font-size: 20px ; padding: 10px;color: white;">Customer Name</label><br />
                    <input type="text" name="Cus_Name" class="main-input" value="@customer.Cus_Name" readonly />
                    <label style="font-size: 20px ; padding: 10px;color: white;">User Name</label><br />
                    <input type="text" name="User_Name" class="main-input" value="@user.User_Name" readonly />
                    <label style="font-size: 20px ; padding: 10px;color: white;">User Type</label><br />
                    <input type="text" name="User_Type" class="main-input" value="@user.User_Type" readonly />
                    <label style="font-size: 20px ; padding: 10px;color: white;">Car Model</label><br />
                    <input type="text" name="Car_Model" class="main-input" value="@car.Car_Model" readonly />
                    <label style="font-size: 20px ; padding: 10px;color: white;">Car License</label><br />
                    <input type="text" name="Car_Licence" class="main-input" value="@car.Car_Licence" readonly />
                    <label style="font-size: 20px ; padding: 10px;color: white;">Duration of Installment</label><br />
                    <select name="Duration" id="Duration" class="main-input">
                        <option value="">Choose Here</option>
                        <option value="12">12</option>
                        <option value="18">18</option>
                        <option value="24">24</option>
                        <option value="30">30</option>
                    </select>
                    <label style="font-size: 20px ; padding: 10px;color: white;">Down Pay</label><br />
                    <select name="Down_Pay" id="Down" class="main-input">
                        <option> </option>
                    </select>
                    <label style="font-size: 20px ; padding: 10px;color: white;">Monthly Payment</label><br />
                    <input type="text" id="Price"  name="Car_ResidnalPrice" class="main-input" value="@car.Car_Price" readonly />
                    <input type="text" name="Date" placeholder="Date" class="main-input" value="@date" readonly />
                    <input type="text" name="Time" placeholder="Time" class="main-input" value="@time" readonly />

                    <input type="submit" id="submit" value="Add Sales" class="submit" />
                </form>
            </div>
        </div>
    </div>
    <div class="footer">
        <div class="container">
            <p class="copyright"> &copy; 2022 - All Rights Reserved - Muhammad Gomaa</p>
            <div class="social-icons">
                <i class="fa-brands fa-facebook"></i>
                <i class="fa-brands fa-twitter"></i>
                <i class="fa-brands fa-instagram"></i>
                <i class="fa-brands fa-linkedin"></i>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
            integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js"
            integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js"
            integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
            crossorigin="anonymous"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="~/Content/javascript/Proj6.js"></script>
    
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</body>

</html>