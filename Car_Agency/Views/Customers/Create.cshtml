@model Car_Agency.Models.Customer

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="~/Content/css/all.min.css" rel="stylesheet">
    <link href="~/Content/css/normalize.css" rel="stylesheet">

    <link href="~/Content/css/Proj6.css" rel="stylesheet">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,300;0,400;1,700&family=Open+Sans:wght@300;400;700&display=swap"
          rel="stylesheet">
    <title>Add Customer Page</title>

</head>

<body>
    <div class="header-customer">
        <div class="container">
            <img src="~/Content/photos/logo.png" alt="logo">
            <div class="links">
                <span class="icon">
                    <span></span>
                    <span></span>
                    <span></span>
                </span>
                <ul>
                    <li>@Html.ActionLink("Home", "Main", "Home")</li>
                    <li>@Html.ActionLink("Customers", "Operation", "Home")</li>
                    <li>@Html.ActionLink("Operation", "Operation", "Home")</li>
                    <li>@Html.ActionLink("Logout", "Logout", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="add">
        <div class="container">
            <h2 class="special-heading-add">Add Customer Page</h2>
            <div class="content">
                <form action="add">
                    @Html.TextBoxFor(n => n.Cus_Name , new { placeholder = "Customer Name", @class = "main-input" })
                    @Html.ValidationMessageFor(n => n.Cus_Name, "", new { @class = "text-danger", @style = "color : white" })
                    @Html.TextBoxFor(n => n.Cus_Phone, new { placeholder = "Customer Phone", @class = "main-input" })
                    @Html.ValidationMessageFor(n => n.Cus_Phone, "", new { @class = "text-danger", @style = "color : white" })
                    @Html.TextBoxFor(n => n.National_ID, new { placeholder = "Customer National ID", @class = "main-input" })
                    @Html.ValidationMessageFor(n => n.National_ID, "", new { @class = "text-danger", @style = "color : white" })
                    <input type="submit" id="submit" value="Add Customer" class="submit" />
                </form>
            </div>
        </div>
    </div>
    <div class="footer">
        <div class="container">
            <p class="copyright"> &copy; 2022 - All Rights Reserved - Muhammad Gomaa</p>
            <div class="social-icons">
                <i class="fa-brands fa-facebook"></i>
                <i class="fa-brands fa-twitter"></i>
                <i class="fa-brands fa-instagram"></i>
                <i class="fa-brands fa-linkedin"></i>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
            integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js"
            integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js"
            integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
            crossorigin="anonymous"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="~/Content/javascript/Proj6.js"></script>
    <script>
        $("#submit").click(function () {

            var name = $("#Cus_Name").val();
            var phone = $("#Cus_Phone").val();
            var nid = $("#National_ID").val();

            let isnum = /^\d+$/.test(phone);
            let isnum1 = /^\d+$/.test(nid);

            if (name == "" || phone == "" || nid == "") {
                swal({
                    title: "Fields Empty",
                    text: "Please Complete The Required Information",
                    icon: "warning",
                    button: "OK",
                });
            }
            else if (phone.length != 11 || !isnum) {
                swal({
                    title: "Invalid Phone Number",
                    text: "Please Insert Correct Phone Number",
                    icon: "warning",
                    button: "OK",
                });
            }
            else if (nid.length != 14 || !isnum1) {
                swal({
                    title: "Invalid National ID",
                    text: "Please Insert Correct National ID Number",
                    icon: "warning",
                    button: "OK",
                });
            }
            else {
                swal({
                    title: "Are you sure?",
                    text: "Add Customer Information",
                    icon: "warning",
                    buttons: true,
                })
                    .then((willDelete) => {
                        if (willDelete) {
                            swal("", {
                                icon: "success",
                                text: "Successfully Added",
                            });
                        }
                        else {
                            swal("Cancelled Operation");
                        }
                    });
            }

        })
    </script>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</body>

</html>